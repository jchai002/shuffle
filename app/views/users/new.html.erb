<section id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">How It Works</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="timeline">
                    <li>
                        <div class="timeline-image">
                            <%=image_tag("1.jpg", class: "img-circle img-responsive") %>
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>Step 1</h4>
                                <h4 class="subheading">Opt in!</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">Entering your name and email below to join the shuffle.</p>
                            </div>
                        </div>
                    </li>
                    <li class="timeline-inverted">
                        <div class="timeline-image">
                            <%=image_tag("2.jpg", class: "img-circle img-responsive") %>
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>Step 2</h4>
                                <h4 class="subheading">Shuffle</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">We will shuffle all the people who wanted to meet new people for lunch into groups. We will then email you the contact info for your group members.</p>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="timeline-image">
                          <%=image_tag("3.jpg", class: "img-circle img-responsive") %>
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>Step 3</h4>
                                <h4 class="subheading">Communicate</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">Email each other to set up a lunch.</p>
                            </div>
                        </div>
                    </li>
                    <li class="timeline-inverted">
                        <div class="timeline-image">
                          <%=image_tag("4.jpg", class: "img-circle img-responsive") %>
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>Step 4</h4>
                                <h4 class="subheading">Have Fun</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">Enjoy being social with new people and possibly make new friends or business clients!</p>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Please Enter Your Info</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <%= form_for @user, :html => {:id => "contactForm"} do |f| %>

                        <div class="row">
                            <div class="col-md-6 col-md-offset-3">
                                <div class="form-group">
                                  <%= f.text_field :name, class: "form-control", placeholder: "Your Name *" %>
                                </div>
                                <div class="form-group">
                                    <%= f.text_field :company, class: "form-control", placeholder: "Your Company *"%>
                                </div>
                                <div class="form-group">
                                    <%= f.text_field :email, class: "form-control", placeholder: "Your Email *"%>
                                </div>
                                <div class="col-lg-12 text-center">
                                    <%= f.submit "Submit", class: "btn btn-xl"%>
                                </div>
                            </div>
                        </div>
                        <% end %>
                </div>
            </div>
        </div>
    </section>

